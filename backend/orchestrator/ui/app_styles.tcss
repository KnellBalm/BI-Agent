/* 
 * BI-Agent Console Global Styles
 * Optimized for Hybrid CLI-style Layout
 */

/* Variables */
$primary: #007AFF;
$secondary: #5856D6;
$surface: transparent;
$panel: transparent;
$text: auto;
$text-secondary: auto;

/* Global Styles */
Screen {
    background: transparent;
}

Header, Footer {
    display: none;
}

/* Sidebar Hide */
#sidebar {
    display: none;
}

/* Scroll Area (Top 90%) */
#chat-log {
    height: 100%;
    overflow-y: auto;
    padding: 0 1;
}

/* Input Area (Bottom docked) */
#input-container {
    dock: bottom;
    height: 3;
    padding: 0;
    margin: 0;
    background: transparent;
}

Input {
    border: none;
    background: transparent;
}

Input:focus {
    border: none;
}

#send-btn {
    display: none; /* Hide the send button to feel like pure CLI */
}

/* Command Menu (Overlayed above input) */
#command-menu {
    display: none;
    height: auto;
    max-height: 10;
    background: #1e1e1e;
    border: round $primary;
    dock: bottom;
    margin-bottom: 3;
}

/* Chat Bubbles (now behave like normal inline text output) */
.message-bubble {
    border: none;
    padding: 0;
    margin: 0 0 1 0;
    background: transparent;
}

.user-message {
    align: left top; /* Not right-aligned anymore */
    border: none;
    color: cyan;
}

/* Status Indicators */
#hud-status {
    dock: bottom;
    margin-bottom: 3; /* right above input */
    height: 1;
    background: transparent;
    color: $text-secondary;
}

.hud-docked {
    dock: bottom;
    margin-bottom: 3;
}
